<container>
    <!-- used to check if logged in or not when testing-->
    <!-- <p style="color: black;">loggedIn: {{loggedIn}}</p> -->
    <div class="priya-hero">
        <div class="priya-hero-form">
            <h2>{{form_title}}</h2><br>
            <form action="/api/posts" method="post" id="post-form" enctype="multipart/form-data">
                <label for="tilte">{{label_title}}:</label>
                <input minlength="5" required type="text" name="title" id="title" class="form-input"/>
                <label for="content_txt">{{label_content}}:</label>
                <textarea minlength="5" required type="text" name="content_txt" id="content_txt" cols="30" rows="10"
                          class="form-input"></textarea>
                {{#if file_included}}
                <label for="attached_file">Attachment:</label>
                <input required type="file" id="file" name="file" class="form-input"/>
                {{/if}}
                <input type="text" id="type" name="type" value="{{type}}" style="display: none" />
                <button class="priya-hero-form" type="submit">Submit</button>
            </form>
        </div>
        <div class="challenges ">
            {{#each posts as |post|}}
                {{> challenge post}}
            {{/each}}
        </div>
    </div>
</container>
