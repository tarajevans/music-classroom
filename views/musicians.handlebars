        <h3>{{this.username}}</h3><br>
        <img src ="/uploads/{{this.image}}" id = "profil-image" width="80" height="80"><br>
        <label id="bio_intro">About me : {{this.bio}} </label><br>
        <ul>Musician Submissions</ul>
        <li><a href ="#">link to music</a></li><br><br>
        {{/each}}
        </div>
        
    </row>
</container>



<script>
    

    function show(){
        var profile = document.getElementById("profile");

        console.log(profile);
        if(profile.style.display === "none"){
        profile.style.display="block";
        } else {
            profile.style.display = "none";
        }
    }


</script>