<container>
    <row class="hero">
        <col>
            <div class="hero-intro">
                <h2>Meet our Musicians</h2><br>
                <ul id="musicians">{{#each musicians}}
                    <li class="musiciansLI">
                        <ul>
                      <a href= '#' onclick="show()" >{{this.username}}</a>
                    </ul>
                    </li>                       
                    {{/each}}

                </ul>
            </div>
        </col>
        <col>
        <div class="hero-form" id = "profile" style = "display:none">
