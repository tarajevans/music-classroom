<container>
    <p style="color: black;">loggedIn: {{loggedIn}}</p>
    <div class="priya-hero">
        <div class="priya-hero-form">
            <h2>This Week's Challenge!</h2><br>
            <form action="/api/posts" method="post" id="post-form">
                <label for="tilte">Prompt:</label>
                <input minlength="5" required type="text" name="title" id="title" class="form-input"/>
                <label for="content_txt">Challenge:</label>
                <textarea minlength="5" required type="text" name="content_txt" id="content_txt" cols="30" rows="10"
                          class="form-input"></textarea>
                <label for="attached_file">Attachment:</label>
                <input required type="file" id="attached_file" class="form-input"/>
                <button class="hero-form" type="submit">Submit</button>
            </form>
        </div>
        <div class="challenges ">
            {{#each posts as |post|}}
                {{> challenge post}}
            {{/each}}
        </div>
    </div>
</container>
